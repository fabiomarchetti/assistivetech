# Configurazione Apache per Agenda Timer PWA su Aruba

# Abilita rewrite engine
RewriteEngine On

# Forza HTTPS (decommentare su Aruba se hai certificato SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Tipo MIME per file Flutter/Dart/PWA
AddType application/javascript .js
AddType text/css .css
AddType application/json .json
AddType application/manifest+json .webmanifest

# Service Worker deve essere servito con tipo MIME corretto
<Files "flutter_service_worker.js">
    Header set Content-Type "application/javascript"
    Header set Service-Worker-Allowed "/"
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</Files>

# Manifest PWA
<Files "manifest.json">
    Header set Content-Type "application/manifest+json"
</Files>

# Compressione file per performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/manifest+json
</IfModule>

# Cache per risorse statiche (importante per PWA offline)
<IfModule mod_expires.c>
    ExpiresActive on

    # Service worker - nessuna cache
    ExpiresByType application/x-javascript "access plus 0 seconds"

    # Assets - cache lunga
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Sicurezza header PWA
<IfModule mod_headers.c>
    # Sicurezza base
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"

    # Permetti iframe solo stesso dominio (rimuovi se problemi)
    Header always set X-Frame-Options SAMEORIGIN

    # CORS per API (se necessario)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Abilita FollowSymLinks
Options +FollowSymLinks

# Disabilita listing directory
Options -Indexes

# Gestione errori
ErrorDocument 404 /agenda_timer/index.html

# Supporto per routing client-side (SPA)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /agenda_timer/

    # Non reindirizzare file esistenti
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Reindirizza tutto a index.html per SPA routing
    RewriteRule ^ index.html [L]
</IfModule>
